<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/style.css">
    <link rel="stylesheet" type="text/css" href="/static/animasi.css">
    <title>Tangki Sahabat Sentarum</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
</head>

<body>
    <!-- NAV -->
    <nav>
        <a href="/index"><img src="/static/assets/logo.png" alt="" class="logo"></a>
        <ul id="menu-links">
            <!-- source icon dari https://icons8.com/icons/ -->
            <li class="btn-home"><a href="/index">Home</a></li>
            <li class="btn-product"><a href="/product">Product</a></li>
            <li class="btn-about"><a href="/about">About</a></li>
            <li class="btn-contact"><a href="/contact">Contact</a></li>
        </ul>
        <div class="nav-btn"><a href="" id="Search">
            <img src="/static/assets/search.png" alt="" id="Search">
        </a>
        <form action="/search" method="GET">
            <input type="text" id="term" placeholder="Cari produk..." name="term">
        </form>

    </div>
    <div class="user"><a href="/base"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                viewBox="0 0 24 24">
                <path
                    d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z" />
    </svg></a></div>
    </nav>

    <!-- ISI (Cards) -->
    <div class="container2">
        <div id="cards">
            <% data.forEach(prod => { %>
                <div class="card">
                    <img src="/image/<%= prod.img %>" alt="">
                    <h3 class="product-name"><%= prod.name %></h3>
                    <a href="https://wa.link/4on5b0" target ="_blank"><div class="buy-now">BUY NOW!</div></a>
                </div>
            <% }); %>
        </div>
    </div>


    <!-- Footer -->
    <footer>
        <div class="footer-kiri">
            <div class="footer-kiri-nama">
                <h2>Toko Tangki<br>Sahabat Sentarum</h2>
            </div>
            <div class="footer-kiri-icon">
                <ul class="footer-kiri-ul">
                    <li><a href="https://www.facebook.com"><img src="/static/assets/logo/facebook.png" alt=""></a></li>
                    <li><a href=""><img src="/static/assets/logo/instagram.png" alt=""></a></li>
                    <li><a href=""><img src="/static/assets/logo/icons8-tokopedia-64.png" alt=""></a></li>
                    <li><a href=""><img src="/static/assets/logo/icons8-whatsapp-50.png" alt=""></a></li>
                </ul>
            </div>
        </div>
        <div class="footer-tengah">
            <div class="footer-kanan-alamat">
                <h2>Alamat Toko</h2>
                <p>
                    Sungai Bangkong, <br>
                    Kec. Pontianak Kota, <br>
                    Kota Pontianak, <br>
                    Kalimantan Barat 78113
                </p>
            </div>
        </div>
        <div class="footer-kanan">
            <div class="footer-kanan-about">
                <h2>About</h2>
                <ul>
                    <li><a href="/product">Product</a></li>
                    <li><a href="/about">About Us</a></li>
                </ul>

            </div>
        </div>

    </footer>
    <script>
    </script>
</body>

</html>