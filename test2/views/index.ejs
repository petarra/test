    <script>
        //JQUERY untuk image swiper
        $(document).ready(function () {
            let slideIndex = 1;
            showSlides(slideIndex);

            $(".previous").click(function () {
                showSlides(slideIndex -= 1);
            });

            $(".next").click(function () {
                showSlides(slideIndex += 1);
            });

            $(".footerdot").click(function () {
                const index = $(this).index() + 1;
                showSlides(slideIndex = index);
            });

            // IMG Swipe ke kanan tiap 3 detik
            setInterval(function () {
                showSlides(slideIndex += 1);
            }, 3000);

            function showSlides(n) {
                const slides = $(".slide");
                const dots = $(".footerdot");

                if (n > slides.length) {
                    slideIndex = 1;
                }
                if (n < 1) {
                    slideIndex = slides.length;
                }
                slides.hide();
                dots.removeClass("active");
                slides.eq(slideIndex - 1).show();
                dots.eq(slideIndex - 1).addClass("active");
            }
        });

        // Pass search-input ke halaman search.html (lewat icon search)
        document.getElementById("Search").addEventListener("click", function (event) {
            const inputData = document.getElementById("search-input").value;
            const url = `search.html?data=${encodeURIComponent(inputData)}`;
            this.href = url;
        });

        // Pass search-input ke halaman search.html (lewat klik enter)
        document.getElementById("search-input").addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                const searchQuery = document.getElementById("search-input").value;
                window.location.href = "search.html?data=" + encodeURIComponent(searchQuery);
            }
        });

